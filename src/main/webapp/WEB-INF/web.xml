<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>demo</servlet-name>
        <servlet-class>com.google.appengine.demos.EclipselinkJpaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>controller.admin.AddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetItemImage</servlet-name>
        <servlet-class>view.GetItemImage</servlet-class>
    </servlet>
    <!--    <servlet-mapping>
        <servlet-name>demo</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>-->
    <servlet>
        <servlet-name>GetProductDetails</servlet-name>
        <servlet-class>view.GetProductDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/AddProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetItemImage</servlet-name>
        <url-pattern>/GetItemImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductDetails</servlet-name>
        <url-pattern>/GetProductDetails</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>MyShop.jsp</welcome-file>
    </welcome-file-list>
</web-app>
